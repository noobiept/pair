{
    "name": "pair",
    "version": "1.3.0",
    "packageManager": "pnpm@10.2.1",
    "type": "module",
    "scripts": {
        "start": "vite",
        "build": "tsc --noEmit && vite build --mode=production",
        "preview": "vite preview",
        "format:check": "prettier --check .",
        "format:write": "prettier --write .",
        "circular:check": "madge --circular --extensions ts,tsx source",
        "circular:list": "madge --extensions ts,tsx source",
        "lint": "eslint ."
    },
    "devDependencies": {
        "@eslint/js": "^9.20.0",
        "eslint": "^9.5.0",
        "globals": "^15.14.0",
        "madge": "^8.0.0",
        "prettier": "^3.3.2",
        "typescript": "^5.1.3",
        "typescript-eslint": "^8.23.0",
        "vite": "^6.1.0"
    },
    "dependencies": {
        "@drk4/utilities": "^6.0.0"
    },
    "prettier": {
        "tabWidth": 4,
        "singleQuote": true
    }
}
