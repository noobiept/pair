{
    "name": "pair",
    "version": "2.0.0",
    "packageManager": "pnpm@10.4.1",
    "type": "module",
    "scripts": {
        "start": "vite",
        "build": "tsc --noEmit && vite build --mode=production",
        "watch": "tsc --noEmit --watch",
        "preview": "vite preview",
        "format:check": "prettier --check .",
        "format:write": "prettier --write .",
        "circular:check": "madge --circular --extensions ts,tsx source",
        "circular:list": "madge --extensions ts,tsx source",
        "unused:check": "ts-unused-exports tsconfig.json --allowUnusedTypes",
        "css:check": "stylelint 'source/**/*.css'",
        "lint": "eslint .",
        "test": "vitest run --coverage",
        "test:w": "vitest --coverage"
    },
    "devDependencies": {
        "@eslint/js": "^9.21.0",
        "@types/react": "^19.0.10",
        "@types/react-dom": "^19.0.4",
        "@vitejs/plugin-react": "^4.3.4",
        "@vitest/coverage-v8": "3.0.6",
        "eslint": "^9.21.0",
        "eslint-plugin-react": "^7.37.4",
        "eslint-plugin-react-hooks": "^5.1.0",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "globals": "^16.0.0",
        "i18next": "^24.2.2",
        "i18next-browser-languagedetector": "^8.0.4",
        "i18next-http-backend": "^3.0.2",
        "jsdom": "^26.0.0",
        "madge": "^8.0.0",
        "prettier": "^3.5.2",
        "react-i18next": "^15.4.1",
        "stylelint": "^16.14.1",
        "stylelint-config-recommended": "^15.0.0",
        "ts-essentials": "^10.0.4",
        "ts-unused-exports": "^11.0.1",
        "typescript": "^5.7.3",
        "typescript-eslint": "^8.24.1",
        "vite": "^6.1.1",
        "vitest": "^3.0.6"
    },
    "dependencies": {
        "@drk4/utilities": "^6.3.0",
        "clsx": "^2.1.1",
        "jotai": "^2.12.1",
        "jotai-effect": "^2.0.1",
        "react": "^19.0.0",
        "react-dom": "^19.0.0"
    },
    "prettier": {
        "tabWidth": 4,
        "singleQuote": true
    }
}
