{
    "name": "pair",
    "version": "2.0.0",
    "packageManager": "pnpm@10.2.1",
    "type": "module",
    "scripts": {
        "start": "vite",
        "build": "tsc --noEmit && vite build --mode=production",
        "watch": "tsc --noEmit --watch",
        "preview": "vite preview",
        "format:check": "prettier --check .",
        "format:write": "prettier --write .",
        "circular:check": "madge --circular --extensions ts,tsx source",
        "circular:list": "madge --extensions ts,tsx source",
        "lint": "eslint ."
    },
    "devDependencies": {
        "@eslint/js": "^9.20.0",
        "@types/react": "^19.0.8",
        "@types/react-dom": "^19.0.3",
        "@vitejs/plugin-react": "^4.3.4",
        "eslint": "^9.5.0",
        "eslint-plugin-react": "^7.37.4",
        "globals": "^15.14.0",
        "madge": "^8.0.0",
        "prettier": "^3.3.2",
        "ts-essentials": "^10.0.4",
        "typescript": "^5.1.3",
        "typescript-eslint": "^8.23.0",
        "vite": "^6.1.0"
    },
    "dependencies": {
        "@drk4/utilities": "^6.0.0",
        "clsx": "^2.1.1",
        "jotai": "^2.11.3",
        "react": "^19.0.0",
        "react-dom": "^19.0.0"
    },
    "prettier": {
        "tabWidth": 4,
        "singleQuote": true
    }
}
